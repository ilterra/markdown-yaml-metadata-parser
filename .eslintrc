{
  "extends": [
    "airbnb/base",
    "plugin:flowtype/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier",
    "prettier/flowtype"
  ],
  "plugins": [
    "import",
    "flowtype",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {"singleQuote": true, "printWidth": 120}],
    "valid-jsdoc": ["error"],
    "require-jsdoc": ["error"]
  },
  "env": {
    "jest": true
  }
}